#!/bin/sh

while true; do
  mem="$(free -h | grep Mem | awk '{print $3 " / "$2}')"
  #load="$(uptime | awk '{print $9 $10 $11 }' | sed ' s/,/ - /g')"
  load="$(cat /proc/loadavg | awk '{printf ("%s - %s - %s", $1, $2, $3)}')"
  date="$(date '+%d %b %Y [%a] - %r')"
  xsetroot -name "ğŸª $mem ğŸ“Š $load ğŸ“… $date "
  sleep 1
done

